{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [{
        "source": "/api/post",
        "function": "post"
      },
      {
        "source": "/api/delete",
        "function": "delete"
      }
    ]
  }
}